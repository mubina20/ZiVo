    <div class="main_container">
        <div class="memberS">
            <div id="members_information">  
                <span class="text">
                    ZiVo's members information
                </span>
                <table>
                    <thead>
                        <th scope="col">T/r</th>
                        <th scope="col">NickName</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Birthday</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Country</th>
                        <th scope="col">Status</th>
                    </thead>
                    
                    <% members_data.map((member, key) => { %>
                        <tbody style="background: white;">
                            <td><%= key + 1 %></td>
                            <td>@<%= member.mb_nick %></td>
                            <td><%= member.mb_name %></td>
                            <td><%= member.mb_surname %></td>
                            <td><%= member.mb_birthday %></td>
                            <td><%= member.mb_gender %></td>
                            <td><%= member.mb_country %> </td>
                            <td>
                                <select class="spec_select mb_status" id="<%= member._id %>">
                                    <option value="ACTIVE"  <%= member.mb_status ==='ACTIVE' ? 'selected' : '' %> >ACTIVE</option>
                                    <option value="PAUSED" <%= member.mb_status ==='PAUSED' ? 'selected' : '' %> >PAUSED</option>
                                    <option value="BLOCKED"  <%= member.mb_status ==='BLOCKED' ? 'selected' : '' %> >BLOCKED</option>
                                    <option value="DELETED"  <%= member.mb_status ==='DELETED' ? 'selected' : '' %> >DELETED</option>
                                </select>
                            </td>
                        </tbody>
                    <% }); %>
                </table>
            </div>
        </div>
    
